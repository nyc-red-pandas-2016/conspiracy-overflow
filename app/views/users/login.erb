<div class='container'>
  <% if @errors %>
    <ul>
      <% @errors.each do |error| %>
      <li><%= error %></li>
      <% end %>
    </ul>
  <% end %>

  <form action="/users/login" method="POST">
    <label for='email'>Email:</label>
    <input type='text' name='user[email]' required='required'/><br>
    <label for='password'>Password:</label>
    <input type='password' name='user[password]' required='required'/><br>
    <input type='submit' value='Sign In'/>
    
  </form>

</div>